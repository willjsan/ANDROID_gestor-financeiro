<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_wrapper"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/overview_wrapper_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Overview"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/main_fragment_listview_overview_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.00"
        app:layout_constraintStart_toStartOf="@+id/main_fragment_listview_overview_wrapper"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/overview_wrapper_bt_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="@drawable/main_wrapper_title_menu_button"
        app:layout_constraintBottom_toBottomOf="@+id/overview_wrapper_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/overview_wrapper_tv_title"
        app:layout_constraintVertical_bias="0.5" />

    <ListView
        android:id="@+id/main_fragment_listview_overview_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overview_wrapper_tv_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>